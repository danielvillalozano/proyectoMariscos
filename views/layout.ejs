        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (session.usuario) { %>
            <li class="nav-item">
              <span class="navbar-text text-white me-3">Hola, <strong><%= session.usuario %></strong></span>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio</a>
            </li>
            <% if (session.rol === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/admin">Panel Admin</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/quejas-sugerencias">Quejas y Sugerencias</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Cerrar sesi칩n</a>
